<% layout('layout-desktop') -%>
<% script('/javascripts/jquery-1.9.1.js') -%>
<% script('/javascripts/bootstrap.js') -%>
<% stylesheet('/stylesheets/bootstrap.css') -%>
<% stylesheet('/stylesheets/bootstrap-responsive.css') -%>
<form class="form-horizontal" method="post">
	<fieldset>
		<legend>Register an account</legend>
		<div class="control-group">
			<label class="control-label" for="username">Username</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username">
				<p class="help-block">Your ID of your account.</p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">Passowrd</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password_repeat">Repeat Passowrd</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password_repeat" name="password_repeat">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</fieldset>
</form>
<% block('footer', '<p><a href="http://code.google.com/p/microblog-nodejs/" target="_blank">microblog-nodejs on Google Code</a> 2013</p>') -%>